{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "types": ["vite-plugin-svgr/client", "vite-plugin-pwa/client"],
    "baseUrl": ".",
    "paths": {
      "~hooks": ["src/hooks"],
      "~svg": ["src/svg"],
      "~store": ["src/store"],
      "~utils": ["src/utils"],
      "~context": ["src/context"],
      "~hooks/*": ["src/hooks/*"],
      "~svg/*": ["src/svg/*"],
      "~store/*": ["src/store/*"],
      "~utils/*": ["src/utils/*"],
      "~context/*": ["src/context/*"]
    }
  },
  "include": ["./src"]
}
